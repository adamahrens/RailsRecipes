<div class="row">
  <div class="col-md-8">
    <h1>Chatroom</h1>
    <div id="messages">
      <%= render(partial: 'message', collection: @messages) || 'No messages' %>
    </div>
  </div>
  <div class="col-md-4">
    <%= form_with model: @message, url: [current_chef, @message], id: 'send-message' do |form| %>
      <div class="form-group">
        <%= form.text_area :content, class: 'form-control', placeholder: 'Message', rows: 4 %>
      </div>
      <div class="form-group">
        <%= form.submit 'Send Message', class: 'btn btn-primary' %>
      </div>
    <% end %></div>
</div>
