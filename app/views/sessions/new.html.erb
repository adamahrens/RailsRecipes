<h1>Login</h1>
<%= form_with url: login_path, local: true do |form| %>
   <div class="form-group">
     <%= form.label :email %>
     <%= form.text_field :email, class: 'form-control', placeholder: 'Email', name: 'session[email]' %>
   </div>
   <div class="form-group">
     <%= form.label :password %>
     <%= form.password_field :password, class: 'form-control', placeholder: 'Password', name: 'session[password]' %>
   </div>

   <div class="form-group">
     <%= form.submit 'Login', class: 'btn btn-primary' %>
   </div>
<% end %>
