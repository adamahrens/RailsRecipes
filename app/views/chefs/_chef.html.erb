<div class="chef">
  <h1><%= chef.name %> (<%= chef.id %>)</h1>
  <p>
    Email at  <%= mail_to chef.email %>
  </p>
  <p>
    Total Recipes is <%= chef.recipes.count %>
  </p>

  <% if chef_is_current_user(chef) %>
    <p>
      <%= link_to 'Delete', chef_path(chef), id: "chef_#{chef.id}_destroy", method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'btn btn-danger' %>
    </p>
  <% end %>

  <%= link_to "View More", chef, id: "chef_#{chef.id}", class: 'btn btn-primary' %>
</div>
