<h1>Viewing <%= @chef.name %> Profile</h1>
<div>
  <%= image_tag avatar_url(@chef, 100), class: 'img-thumbnail' %>
</div>
<p>
  Reach me at <%= @chef.email %>
  </p>
  <p>
    <%= link_to 'Edit', edit_chef_path(@chef), class: 'btn btn-danger' %>
    </p>
<h2>My Recipes</h2>
<% if @chef.recipes.count > 0 %>
  <%= render @chef.recipes, cached: true %>
<% else %>
  <p>
    No recipes available
    </p>
<% end %>
