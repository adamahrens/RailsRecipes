<h1>Viewing <%= @chef.name %> Profile</h1>
<div>
  <%= image_tag avatar_url(@chef, 100), class: 'img-thumbnail' %>
</div>
<code>
  Is admin? <%= @chef.admin? %>
</code>
<p>
  Reach me at <%= @chef.email %>
  </p>
  <% if chef_is_current_user(@chef) %>
  <p>
    <%= link_to 'Edit', edit_chef_path(@chef), class: 'btn btn-primary' %>
    <%= link_to 'Delete', chef_path(@chef), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'btn btn-danger' %>
    </p>
  <% end %>
<h2>My Recipes</h2>
<% if @chef.recipes.count > 0 %>
  <%= render @chef.recipes, cached: true %>
<% else %>
  <p>
    No recipes available
    </p>
<% end %>
