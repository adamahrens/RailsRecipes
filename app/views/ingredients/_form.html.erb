<%= form_with model: ingredient, local: true do |form| %>
   <div class="form-group">
     <%= form.label :name %>
     <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
   </div>
   <div class="form-group">
     <%= form.submit actionText, class: 'btn btn-primary' %>
   </div>
<% end %>
